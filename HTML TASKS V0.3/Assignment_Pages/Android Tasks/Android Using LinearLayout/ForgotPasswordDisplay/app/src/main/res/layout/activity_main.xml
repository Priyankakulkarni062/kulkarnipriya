<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    public class MainActivity extends Activity {

    protected void onCreate(Bundle savedInstanceState) {
    super.onCreate(savedInstanceState);
    setContentView(R.layout.activity_main);
    final TextView helloTextView = (TextView) findViewById(R.id.text_view_id);
    helloTextView.setText(R.string.user_greeting);
    }

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="930px"
        android:layout_height="960px"
        android:background="#00000065"
        android:orientation="vertical"
        android:padding="30px"
        >

        <LinearLayout
            android:layout_width="600px"
            android:layout_height="500px"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="7dp"
            android:layout_marginTop="250px"
            android:layout_marginLeft="30px">

            <LinearLayout
                android:layout_width="600px"
                android:layout_height="100px"
                android:background="#F7F7F7"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="400px"
                    android:layout_height="100px"
                    android:layout_weight="80"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FORGOT PASSWORD"
                        android:layout_marginTop="5px"
                        android:layout_marginLeft="5px"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="200px"
                    android:layout_height="100px"
                    android:layout_weight="80"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img1"
                        android:width="35px"
                        android:height="35px"
                        android:padding="30px"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="600px"
                android:layout_height="400px"
                android:orientation="vertical"
                android:paddingTop="70px"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The link has been sent to your email."
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" The generated link will be active for 24 hours."
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="10px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    }
</androidx.constraintlayout.widget.ConstraintLayout>