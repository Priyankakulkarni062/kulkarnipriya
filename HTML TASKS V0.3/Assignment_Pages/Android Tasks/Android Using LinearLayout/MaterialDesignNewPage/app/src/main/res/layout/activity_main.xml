<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
    <com.google.android.material.button.MaterialButton
        android:id="@+id/material_unelevated_button"
        style="@style/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="#FFFFFFFF"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp"
        />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/material_unelevated_button1"
            style="@style/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTINUE"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/material_unelevated_button2"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEW REQUEST"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:backgroundTint="@color/button"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        style="@style/button2"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:text="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
            app:iconTint="@color/button1"
        />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            style="@style/button2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            app:iconTint="@color/button1"
            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            style="@style/button1"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="3"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            style="@style/button2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="4"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            style="@style/button2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="5"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            style="@style/button2"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:text="6"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:tint="@color/button1"
            app:backgroundTint="@color/button"
            android:src="@drawable/ic_reorder_black_24dp"
            android:layout_marginLeft="5dp"
            app:fabCustomSize="50dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:tint="@color/button1"
            app:backgroundTint="@color/button"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_marginLeft="10dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:tint="@color/button1"
        app:backgroundTint="@color/button"
        android:src="@drawable/ic_remove_black_24dp"
        android:layout_marginLeft="15dp"
        />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:tint="@color/button1"
            app:backgroundTint="@color/button"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_marginLeft="15dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:tint="@color/button1"
            app:backgroundTint="@color/button"
            android:src="@drawable/ic_cancel_black_24dp"
            android:layout_marginLeft="15dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:tint="@color/button1"
            app:backgroundTint="@color/button"
            android:src="@drawable/ic_link_black_24dp"
            android:layout_marginLeft="15dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="@color/box1"
            app:placeholderText="Email"
            app:boxStrokeColor="@color/box"

            android:icon="@drawable/ic_event_black_24dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="25dp"
            app:boxCornerRadiusTopEnd="25dp"
            app:boxCornerRadiusBottomStart="25dp"
            app:boxCornerRadiusBottomEnd="25dp"
            app:boxBackgroundColor="@color/box1"
            app:placeholderText="Search"
            app:boxStrokeColor="@color/box"
            app:icon="@drawable/ic_arrow_forward_black_24dp"
            app:iconGravity="textEnd"

            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxBackgroundColor="@color/box1"
            app:placeholderText="Password"
            app:passwordToggleEnabled="true"
            app:boxStrokeColor="@color/box"
            app:boxStrokeWidth="3dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
               <com.google.android.material.button.MaterialButton
            android:id="@+id/material_icon_button"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button"
            app:iconTint="@color/button1"
            app:cornerRadius="20dp"
            android:layout_marginLeft="20dp"
            android:text="Next"
            app:icon="@drawable/ic_arrow_forward_black_24dp"
            app:iconGravity="end"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"

            app:backgroundTint="@color/button1"
            android:src="@drawable/ic_expand_more_black_24dp"
            android:layout_marginLeft="15dp"
            app:fabCustomSize="30dp"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"

            app:backgroundTint="@color/button1"
            android:src="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:layout_marginLeft="15dp"
            app:fabCustomSize="30dp"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/material_unelevated_button5"
            style="@style/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/material_unelevated_button7"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPLOAD"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            android:backgroundTint="@color/button"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/material_unelevated_button6"
            style="@style/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:textColor="#FFFFFFFF"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="18dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/ic_account_balance_black_24dp"
                android:layout_height="10dp"
                android:layout_width="3dp"
                android:background="@color/chip"/>
            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/ic_mail_outline_black_24dp"
                android:layout_height="10dp"
                android:layout_width="3dp"
                />
            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/ic_event_black_24dp"
                android:layout_height="10dp"
                android:layout_width="3dp"
                />
            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/ic_create_black_24dp"
                android:layout_height="10dp"
                android:layout_width="3dp"
                />
            <com.google.android.material.tabs.TabItem
                android:icon="@drawable/ic_trending_up_black_24dp"
                android:layout_height="10dp"
                android:layout_width="3dp"
                />
        </com.google.android.material.tabs.TabLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        >
        <com.google.android.material.button.MaterialButtonToggleGroup
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toggle_button_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PUBLIC"/>
            <com.google.android.material.button.MaterialButton
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRIVATE"
                app:backgroundTint="#245070"/>


        </com.google.android.material.button.MaterialButtonToggleGroup>
    </LinearLayout>
    </LinearLayout>
