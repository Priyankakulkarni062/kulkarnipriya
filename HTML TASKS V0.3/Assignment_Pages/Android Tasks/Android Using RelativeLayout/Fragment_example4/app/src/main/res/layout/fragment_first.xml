<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="vertical"
                android:background="@drawable/background">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/img2"
                    android:background="#F6F8F9"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical"
                android:background="@drawable/border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="18dp"
                    android:text="Add People"
                    android:textColor="#000"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="15dp"/>
                <LinearLayout
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:background="@drawable/draw"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="Peter Dinklage"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="1dp"
                        android:padding="10dp"/>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/img5"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="110dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="01 result found"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/background"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="250dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img3"
                    android:width="40dp"
                    android:background="#F4F8FA"/>
                <LinearLayout
                    android:layout_width="270dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    android:paddingLeft="30dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:id="@+id/item1"
                        android:paddingTop="20dp"
                        android:paddingBottom="5dp"
                        android:text="Peter Dinklage"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/item2"
                        android:text="Lorem ipsum doler sit amet."/>
                </LinearLayout>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:src="@drawable/img4"
                    android:padding="2dp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCEL"
                    android:layout_marginLeft="30dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="30dp"
                    android:background="@drawable/underline"
                    android:textColor="#595959"
                    android:layout_marginRight="110dp"

                    />
                <LinearLayout
                    android:layout_width="170dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/dot">
                    <TextView
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        android:text="None selected"
                        android:layout_marginLeft="10dp"
                        android:paddingTop="5dp"

                        android:textColor="#595959"
                        android:padding="5px"


                        />
                    <Button
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="DONE"
                        android:background="@drawable/button"
                        android:textColor="#FFFFFF"
                        android:id="@+id/buttton1"
                        />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>